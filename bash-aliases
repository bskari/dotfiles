# ls aliases
alias ls="ls --color=tty"
alias ll="ls -l"
alias la="ls -A"
alias l="ls --color=tty"

# grep aliases
alias grep="grep --color"

# Always load the math library for bc
alias bc="bc -l"

# Open multiple files in tabs
alias vim="vim -p"

# Ignore color codes in less
alias less="less -R"

# Use multi-threading in make
if [ -f /proc/cpuinfo ] && [ "`which grep`" ] && [ "`which awk`" ];
then
	alias make="make -j$(grep -i -c '^processor' /proc/cpuinfo | awk '{print $1}')"
fi

# Always show warnings in MySQL command line client
alias mysql="mysql --show-warnings"

# SVN alias
if [ "`which colorsvn`" != "" ];
then
	alias svn="colorsvn"
fi

# Prompt when removing more than 3 files
alias rm='rm -I'

# I can never remember the name of this good visual hex editor
if [ "$(which ghex)" != '' ];
then
    alias hexedit='ghex'
elif [ "$(which jeex)" != '' ];
then
    # I prefer ghex, but jeex is okay
    alias hexedit='jeex'
fi
