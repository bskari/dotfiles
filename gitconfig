[user]
    name = Brandon Skari
    email = brandon@skari.org

[merge]
    conflictstyle = diff3

[color]
    ui = true
    branch = auto
    diff = auto
    status = auto

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --oneline --graph --decorate
    unstage = reset HEAD
    set-up = branch --set-upstream-to=origin/master master
    diffline = !sh -c 'git-diff-line.sh'
    current = rev-parse --abbrev-ref HEAD
    setup = !CURRENT=$(git current) && git branch --set-upstream-to=origin/$CURRENT $CURRENT
    stashdiff = !sh -c 'git stash show -p $1'

[init]
    defaultBranch = main

[push]
    default = current

[help]
    autocorrect = 1

[core]
    excludesfile = ~/.gitignore_global
    editor = vim
